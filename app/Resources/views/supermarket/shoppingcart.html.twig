{% extends 'base.html.twig' %}

{% block body %}
    <div class="pull-right" style="margin-bottom: 10px; margin-top: 10px;">
        <a href="{{ path('checkout_cart') }}" class="btn btn-primary pull-right">Checkout<span class="fa"></span></a>
        <br>
        <br>
        <a href="{{ path('list_products') }}" class="btn btn-primary pull-right">Back to products<span class="fa"></span></a>
    </div>

    <div>
        <table xmlns="http://www.w3.org/1999/html" class="table table-bordered">
            <thead>
            <tr>
                <th>NAME</th>
                <th>PRICE</th>
                <th>Operations</th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.productsku }}</td>
                    <td>{{ item.ProductReducedPrice }}</td>
                    <td>
                        <a href="{{ path('remove_item', {'id': item.id}) }}">Remove</a>
                    </td>
                </tr>
            {% endfor %}
            <tbody>
        </table>
    </div>
{% endblock %}
